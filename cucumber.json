{
  "default": {
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "paths": ["src/features/**/*"],
    "require": ["src/steps/*.ts", "src/support/hooks.ts"],
    "requireModule": ["ts-node/register"],
    "format": [
      "progress-bar",
      "html:src/report/cucumber-report.html",
      "json:src/report/cucumber-report.json"
    ],
    "parallel": 2
  }
}
